@page
@model Aoite.Web.Plugins.VueLayoutModel
@inject Microsoft.Extensions.Options.IOptions<Aoite.Web.Plugins.PluginOptions> vuePageOptions
@{
    var component = this.Model.Component;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=9;IE=10;IE=Edge,chrome=1" />
    <meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0" name="viewport" />
    <meta content="yes" name="apple-mobile-web-app-capable" />
    <meta content="black" name="apple-mobile-web-app-status-bar-style" />
    <meta content="telephone=no" name="format-detection" />

    <title>@component.Title</title>
    @if(component.Header.IsNotNull())
    {
        @Html.Raw(component.Header)
    }
</head>
<body>
    <div id="app" v-cloak></div>
    <script src="@vuePageOptions.Value.MainJsPath"></script>
    <script>
function loadMainComponent(exports) {
@Html.Raw(component.Build())
}
    </script>
    @if(component.Footer.IsNotNull())
    {
        @Html.Raw(component.Footer)
    }
    <script>
        startup();
    </script>
</body>
</html>
